###############################################################################
# Makefile
###############################################################################

LMK = -auxdir=../biblio latexmk -bibtex -pdf
TEX = $(wildcard *.tex)
PDF = $(TEX:.tex=.pdf)

###############################################################################

all: $(PDF)

auto:
	$(LMK)-f -pvc

clean:
	latexmk -C
	$(RM) *.aux *.bbl *.blg *.tdo *.spl *~

###############################################################################

%.pdf: %.tex
	$(LMK) $*

###############################################################################

.NOEXPORT:

###############################################################################

